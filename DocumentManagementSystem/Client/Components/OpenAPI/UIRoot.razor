@using DocumentManagementSystem.Shared.OpenApi;

<div>
    @if (Document is not null)
    {
        <UIInfo Info="@Document.Info" ExternalDocs="@Document.ExternalDocs" OpenAPI="@Document.OpenAPI" URL="@URL" />
        <UIServers Servers="@Document.Servers" />
        <UIControllers Paths="@Document.Paths" Tags="@Document.Tags" Components="@Document.Components"/>
        <UISchemas Components="@Document.Components" />
    }
</div>

@code {
    [Parameter]
    [EditorRequired] 
    public OpenAPIRoot? Document { get; set; }
    [Parameter]
    [EditorRequired]
    public string? URL { get; set; }
}
